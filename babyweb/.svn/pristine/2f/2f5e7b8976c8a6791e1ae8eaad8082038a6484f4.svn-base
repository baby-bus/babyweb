 <volist name='data' id='vo'>
   <div class="item border">
        <h2><a href="__URL__/info/id/{$vo.id}">{$vo.title}</a></h2>
        <ul class="postmetadata clearfix">
            <li class="author">{$vo.username}</li>
            <li class="date">{$vo.createtime}</li>          
        </ul>
        <div><img src="{:$vo['thumb'] ? $vo['thumb']:__PUBLIC__/images/blog/temp42_14.jpg}" onerror="javascript:this.src='__PUBLIC__/images/blog/temp42_14.jpg'" class="img-responsive"/></div>
        <p class="digest">{$vo.match_p}...</p>
        <p class="text-right"><a href="__URL__/info/id/{$vo.id}" class="btn btn-primary">続きを読む →</a></p>
    </div>
</volist>
